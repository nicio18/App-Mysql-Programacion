{{#if message}}
<div class="container p-4">
    <div class="r">
        <div class="col-md-4 mx-auto">
            <div class="div alert alert-danger alert-dissmisseible fade show" role="alert">

                {{message}}
                <button type="button" class="close" data-dismiss="alert" aria-lavel="Close">
                    <span aria-hidden="true"> &times;</span>
                </button>

            </div>
        </div>

    </div>
</div>

{{/if}}
{{#if success}}
<div class="container p-4">
    <div class="r">
        <div class="col-md-4 mx-auto">
            <div class="div alert alert-success alert-dissmisseible fade show" role="alert">

                {{success}}
                <button type="button" class="close" data-dismiss="alert" aria-lavel="Close">
                    <span aria-hidden="true"> &times;</span>
                </button>

            </div>
        </div>

    </div>
</div>

{{/if}}

