<div class="container p-5" ">    

        
        {{#if links}}
        <p >
            <a style="align-items: center;" href="/links/add" >Crear Enlace</a>
        </p>
        <table class="table table-dark" align="center" border="1" class="table table-condensed table-bordered table-hover">
          <tr class="tabla">
            <th scope="col">#</th>
            <th scope="col">Titulo</th>
            <th scope="col">Descripcion</th>
            <th scope="col">Url</th>
            <th scope="col">Creado</th>

          </tr>
  
            {{#each links}}
            <tr style="background-color: cadetblue;">
              <th scope="row">{{id}}</th>
              <td>{{title}}</td>
              <td>{{description}}</td>
              <td>{{url}} </td>
              <td>{{timeago created_at}}</td>
              <td><a href="{{url}}" class="btn btn-success" target="_blanck"> Ir</a> </td>
            </tr>
            {{/each}}           

          </tbody>
        </table>
        <a style="margin-top:50px ;" href="/profile" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Regresar</a>
        {{else}}
        <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>No tienes links creados.</p>
                    {{!y redireccionamos a la ruta para agregar el primer enlase}}
                    <a href="/links/add">Crea uno ahora!</a>                                                          
                </div>
         </div>
        {{/if}}      
</div>        
      
      
  




