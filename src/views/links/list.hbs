{{!listar enlaces}}

<div class="container p-4">
    <div class="row">

        {{! each recorre la lista que le devuelve el servidor}} 
        {{#each links}}
            
            
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        {{! _blank sirve para abrir una nueva pesta√±a cuando se hace click sobre el enlase}}
                        <a href="{{url }}" target="_blank">
                            <h3 class="card-title text-uppercase">
                                {{title}}
                            </h3>
                            <p class="m-2">{{description}}</p>
                            <p>{{timeago created_at}}</p>
                            <a href="/links/delete/{{id}}" class=" btn btn-danger" > Borrar</a>
                            <a href="links/edit/{{id}}" class="btn btn-secondary">Editar</a>
                                
                        </a>
                    </div>
                </div>
            </div>
               


        {{else}}
            {{! configuramos un mensaje cuando no hay nada creado aun}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>No tienes links creados.</p>
                    {{!y redireccionamos a la ruta para agregar el primer enlase}}
                    <a href="/links/add">Crea uno ahora!</a>
                                        
                </div>
                <div class="col-md-4 mx-auto">
                    
                    <a style="margin-top:50px ;" href="/profile" class="btn btn-primary btn-lg active" role="button" aria-pressed="true">Regresar</a>

                </div>
                
                
            </div>
        {{/each}}
    </div>
    <div class="form-group"></div>
    
</div>
